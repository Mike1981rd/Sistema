            border-bottom: 1px solid #ebe9f1;
        }
        
        .earning-item:last-child {
            border-bottom: none;
        }
        
        .earning-icon {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.375rem;
            font-size: 1rem;
        }
        
        .earning-details h6 {
            font-size: 0.875rem;
            font-weight: 600;
            color: #5e5873;
            margin-bottom: 0.125rem;
        }
        
        .earning-details p {
            font-size: 0.75rem;
            color: #6e6b7b;
            margin: 0;
        }
        
        .earning-amount {
            font-size: 0.875rem;
            font-weight: 600;
            color: #5e5873;
        }
        
        .earning-change {
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .earning-change.up {
            color: #28c76f;
        }
        
        .earning-change.down {
            color: #ea5455;
        }
        
        .bar-chart-container {
            height: 80px;
            margin-bottom: 0.75rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .trophy-img {
                width: 100px;
                right: 1rem;
            }
            
            .congratulations-card .card-body {
                padding: 1.5rem;
            }
        }
    </style>
}

