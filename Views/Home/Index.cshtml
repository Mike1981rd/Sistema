@model SistemaContable.Models.DashboardViewModel
@{
    ViewData["Title"] = "Panel de Control";
}

<!-- Agregar referencias a FontAwesome de manera local -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="~/css/dashboard-cards.css" asp-append-version="true" />

<div class="dashboard-container">
    <div class="dashboard-header d-flex justify-content-between align-items-center mb-4">
        <div class="date-info">
            <span class="text-muted">@Model.CurrentDate.ToString("dd MMMM, yyyy")</span>
        </div>
    </div>

    <!-- Top Statistics Cards Row -->
    <div class="row">
        <!-- Sales Card -->
        <div class="col-md-3 mb-4">
            <div class="stats-card">
                <div class="stats-info">
                    <h5 class="stats-value">230k</h5>
                    <p class="stats-label">Ventas</p>
                </div>
                <div class="icon-circle" style="background: linear-gradient(45deg, #FF6384, #FF9F40);">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
        </div>
        
        <!-- Customers Card -->
        <div class="col-md-3 mb-4">
            <div class="stats-card">
                <div class="stats-info">
                    <h5 class="stats-value">8.549k</h5>
                    <p class="stats-label">Clientes</p>
                </div>
                <div class="icon-circle" style="background: linear-gradient(45deg, #36A2EB, #4BC0C0);">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
        
        <!-- Products Card -->
        <div class="col-md-3 mb-4">
            <div class="stats-card">
                <div class="stats-info">
                    <h5 class="stats-value">1.423k</h5>
                    <p class="stats-label">Productos</p>
                </div>
                <div class="icon-circle" style="background: linear-gradient(45deg, #FF6384, #FF416C);">
                    <i class="fas fa-box"></i>
                </div>
            </div>
        </div>
        
        <!-- Revenue Card -->
        <div class="col-md-3 mb-4">
            <div class="stats-card">
                <div class="stats-info">
                    <h5 class="stats-value">$9745</h5>
                    <p class="stats-label">Ingresos</p>
                </div>
                <div class="icon-circle" style="background: linear-gradient(45deg, #2DCE89, #2FDF84);">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Cards Section -->
    <div class="row">
        <!-- Left Column: Profit, Expenses, Leads -->
        <div class="col-md-3">
            <!-- Profit Card -->
            <div class="report-card mb-4">
                <div class="card-header">
                    <h6 class="card-title">Profit</h6>
                    <p class="card-subtitle">Last Month</p>
                </div>
                <div class="card-body">
                    <div class="profit-chart">
                        <svg viewBox="0 0 100 30" width="100%" height="100%">
                            <polyline
                                fill="none"
                                stroke="#2DCE89"
                                stroke-width="2"
                                points="0,20 10,15 20,25 30,15 40,20 50,10 60,5 70,15 80,10 90,5 100,10"
                            />
                        </svg>
                    </div>
                    <h3 style="font-weight: 600; color: #343a40;">624k</h3>
                    <span style="color: #2DCE89; font-size: 0.9rem;"><i class="fas fa-arrow-up me-1"></i>+8.24%</span>
                </div>
            </div>

            <!-- Expenses Card -->
            <div class="report-card mb-4">
                <div class="card-header">
                    <h6 class="card-title">82.5k</h6>
                    <p class="card-subtitle">Expenses</p>
                </div>
                <div class="card-body">
                    <div class="expenses-circle">
                        <svg width="100" height="100" viewBox="0 0 100 100">
                            <circle cx="50" cy="50" r="45" fill="none" stroke="#e9ecef" stroke-width="10" />
                            <circle cx="50" cy="50" r="45" fill="none" stroke="#FF6384" stroke-width="10" 
                                   stroke-dasharray="283" stroke-dashoffset="70" 
                                   transform="rotate(-90 50 50)" />
                        </svg>
                        <div class="circle-percent">78%</div>
                    </div>
                    <p class="text-center mt-2" style="color: #6c757d; font-size: 0.85rem;">
                        $21k Expenses more than last month
                    </p>
                </div>
            </div>
        </div>

        <!-- Revenue Report Card (Middle) -->
        <div class="col-md-3">
            <div class="revenue-card">
                <div class="card-body pt-3 px-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h3 class="revenue-value mb-0">$25,825</h3>
                            <p class="budget-text">Budget: 56,800</p>
                        </div>
                        <div class="year-selector pink">
                            2025 <i class="fas fa-chevron-down ms-2"></i>
                        </div>
                    </div>
                    
                    <div class="chart-legend d-flex mt-2">
                        <div class="me-3"><span class="dot earning-dot"></span> Earning</div>
                        <div><span class="dot expense-dot"></span> Expense</div>
                    </div>
                    
                    <div class="revenue-chart mt-2">
                        <div class="chart-labels small text-muted">
                            <div>100</div>
                            <div style="margin-top: 70px">0</div>
                            <div style="margin-top: 25px">-100</div>
                            <div style="margin-top: 25px">-200</div>
