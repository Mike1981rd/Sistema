@model SistemaContable.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="aurora-breadcrumb mb-1">
    <a href="/" class="aurora-breadcrumb-item">Inicio</a>
    <span class="aurora-breadcrumb-item">Dashboard</span>
</div>

<div class="aurora-dashboard-section mt-2">
    <div class="d-flex justify-content-end mb-2">
        <small class="text-muted fs-6">Hoy, @Model.CurrentDate.ToString("dd/MM/yyyy")</small>
    </div>
    
    <div class="row">
        <div class="col-md-3">
            <div class="aurora-card ventas-card">
                <div class="aurora-card-header">
                    <div>
                        <div class="aurora-card-title">Ventas</div>
                        <div class="aurora-card-value">$@Model.FinancialSummary.Sales.ToString("N2")</div>
                    </div>
                    <div class="aurora-card-icon sales">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                </div>
                <div class="aurora-card-trend positive">
                    <i class="fas fa-arrow-up"></i> @Math.Abs(Model.FinancialSummary.SalesTrend)% vs mes anterior
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="aurora-card gastos-card">
                <div class="aurora-card-header">
                    <div>
                        <div class="aurora-card-title">Gastos</div>
                        <div class="aurora-card-value">$@Model.FinancialSummary.Expenses.ToString("N2")</div>
                    </div>
                    <div class="aurora-card-icon expenses">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                </div>
                <div class="aurora-card-trend negative">
                    <i class="fas fa-arrow-up"></i> @Math.Abs(Model.FinancialSummary.ExpensesTrend)% vs mes anterior
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="aurora-card ganancias-card">
                <div class="aurora-card-header">
                    <div>
                        <div class="aurora-card-title">Ganancias</div>
                        <div class="aurora-card-value">$@Model.FinancialSummary.Profits.ToString("N2")</div>
                    </div>
                    <div class="aurora-card-icon profits">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
                <div class="aurora-card-trend positive">
                    <i class="fas fa-arrow-up"></i> @Math.Abs(Model.FinancialSummary.ProfitsTrend)% vs mes anterior
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="aurora-card cobrar-card">
                <div class="aurora-card-header">
                    <div>
                        <div class="aurora-card-title">Por cobrar</div>
                        <div class="aurora-card-value">$@Model.FinancialSummary.PendingPayments.ToString("N2")</div>
                    </div>
                    <div class="aurora-card-icon pending">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
                <div class="aurora-card-trend negative">
                    <i class="fas fa-arrow-up"></i> @Math.Abs(Model.FinancialSummary.PendingPaymentsTrend)% vs mes anterior
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-lg-8">
        <div class="aurora-card" style="height: 400px;">
            <div class="aurora-card-header">
                <div class="aurora-card-title">Ventas vs. Gastos</div>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Este mes
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Esta semana</a></li>
                        <li><a class="dropdown-item" href="#">Este mes</a></li>
                        <li><a class="dropdown-item" href="#">Este trimestre</a></li>
                        <li><a class="dropdown-item" href="#">Este año</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-4">
                <!-- Aquí iría el gráfico -->
                <div class="d-flex justify-content-center align-items-center h-100">
                    <p class="text-muted">Gráfico de ventas vs gastos (se implementará con Chart.js)</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="aurora-card" style="height: 400px;">
            <div class="aurora-card-header">
                <div class="aurora-card-title">Facturas pendientes</div>
                <a href="/ventas/facturas" class="btn btn-sm btn-primary">Ver todas</a>
            </div>
            <div class="mt-3">
                <div class="list-group">
                    @foreach (var invoice in Model.PendingInvoices)
                    {
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Factura #@invoice.InvoiceNumber</h6>
                                <small class="@(invoice.Status.Contains("hoy") ? "text-danger" : invoice.Status.Contains("3 días") ? "text-warning" : "text-secondary")">
                                    @invoice.Status
                                </small>
                            </div>
                            <p class="mb-1">Cliente: @invoice.ClientName</p>
                            <small>$@invoice.Amount.ToString("N2")</small>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
