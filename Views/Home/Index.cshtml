@section Styles {
    <style>
        /* Reset y base */
        body {
            background-color: #f5f5f9;
        }
        
        /* Cards base */
        .vuexy-card {
            background: #fff;
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.25rem 1.125rem rgba(75, 70, 92, 0.1);
            transition: all 0.3s ease-in-out;
            height: 100%;
        }
        
        .vuexy-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 0.25rem 1.125rem rgba(75, 70, 92, 0.15);
        }

        /* Congratulations Card */
        .congratulations-card {
            background: linear-gradient(118deg, rgba(115, 103, 240, 1), rgba(115, 103, 240, 0.7));
            color: white;
            position: relative;
            overflow: hidden;
        }
        
        .congratulations-card::before {
            content: '';
            position: absolute;
            bottom: -30px;
            right: -30px;
            width: 150px;
            height: 150px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }
        
        .congratulations-card .card-body {
            padding: 2rem;
            position: relative;
            z-index: 1;
        }
        
        .congratulations-card h5 {
            font-size: 1.125rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
        
        .congratulations-card h3 {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }
        
        .congratulations-card .btn-view-sales {
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.5);
            color: white;
            padding: 0.5rem 1.25rem;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.375rem;
            transition: all 0.2s;
        }
        
        .congratulations-card .btn-view-sales:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
        }
        
        .trophy-img {
            position: absolute;
            bottom: 0;
            right: 2rem;
            width: 140px;
            height: auto;
        }

        /* Statistics Cards */
        .stats-card .card-body {
            padding: 1.5rem;
        }
        
        .stats-icon-wrapper {
            width: 42px;
            height: 42px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.375rem;
            font-size: 1.25rem;
        }
        
        .stats-icon-primary {
            background: rgba(115, 103, 240, 0.12);
            color: #7367f0;
        }
        
        .stats-icon-success {
            background: rgba(40, 199, 111, 0.12);
            color: #28c76f;
        }
        
        .stats-icon-warning {
            background: rgba(255, 159, 67, 0.12);
            color: #ff9f43;
        }
        
        .stats-icon-info {
            background: rgba(0, 207, 232, 0.12);
            color: #00cfe8;
        }
        
        .stats-card h4 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0;
            color: #5e5873;
        }
        
        .stats-card p {
            color: #6e6b7b;
            font-size: 0.875rem;
            margin-bottom: 0;
        }

        /* Profit Card */
        .metric-card .card-body {
            padding: 1rem;
        }
        
        .metric-card h6 {
            color: #5e5873;
            font-size: 0.813rem;
            font-weight: 600;
            margin-bottom: 0.125rem;
        }
        
        .metric-card .subtitle {
            color: #6e6b7b;
            font-size: 0.75rem;
            margin-bottom: 0.5rem;
        }
        
        .metric-card h3 {
            font-size: 1.375rem;
            font-weight: 600;
            color: #5e5873;
            margin-bottom: 0.125rem;
        }
        
        .metric-trend {
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .metric-trend.up {
            color: #28c76f;
        }
        
        .metric-trend.down {
            color: #ea5455;
        }
        
        .mini-chart-container {
            height: 30px;
            margin-top: 0.375rem;
        }

        /* Expenses Card with Radial */
        .radial-bar-chart {
            position: relative;
            display: inline-block;
            margin-bottom: -0.5rem;
        }
        
        .radial-bar-chart svg {
            transform: rotate(-90deg);
        }
        
        .radial-percentage {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 1.25rem;
            font-weight: 600;
            color: #5e5873;
        }
        
        .expense-info {
            text-align: center;
            margin-top: 0.5rem;
        }
        
        .expense-info p {
            color: #6e6b7b;
            font-size: 0.813rem;
            margin: 0;
        }

        /* Revenue Report Card */
        .revenue-report-card {
            background: #fff;
        }
        
