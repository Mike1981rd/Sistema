            border-bottom: none;
            padding: 1.25rem 1.25rem 0;
        }
        
        .revenue-value {
            font-size: 1.5rem;
            font-weight: 600;
            color: #5e5873;
            margin-bottom: 0.125rem;
        }
        
        .budget-text {
            color: #6e6b7b;
            font-size: 0.875rem;
        }
        
        .year-selector {
            background: #ff9f43;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
        }
        
        .chart-legend {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-top: 0.5rem;
        }
        
        .legend-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.813rem;
            color: #6e6b7b;
        }
        
        .legend-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }
        
        .legend-dot.earning {
            background: #7367f0;
        }
        
        .legend-dot.expense {
            background: #ff9f43;
        }
        
        .revenue-chart-container {
            margin-top: 0.75rem;
            height: 150px;
            position: relative;
        }
        
        .increase-button {
