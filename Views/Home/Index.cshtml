            border-bottom: none;
            padding-bottom: 0;
        }
        
        .compra-detail {
            display: flex;
            align-items: flex-start;
        }
        
        .compra-detail h6 {
            font-size: 0.875rem;
            font-weight: 600;
            color: #5e5873;
        }

        /* Earning Reports Card */
        .earning-reports .card-header {
            border-bottom: none;
            padding: 1rem 1rem 0.25rem;
        }
        
        .earning-reports h5 {
            font-size: 1rem;
            font-weight: 600;
            color: #5e5873;
            margin-bottom: 0.125rem;
