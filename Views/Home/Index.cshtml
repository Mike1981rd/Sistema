                            <rect x="260" y="60" width="20" height="130" fill="#fd7e14" />
                            <rect x="290" y="90" width="20" height="100" fill="#fd7e14" />
                            <rect x="320" y="70" width="20" height="120" fill="#fd7e14" />
                            
                            <!-- Line chart -->
                            <polyline
                                fill="none"
                                stroke="#f5365c"
                                stroke-width="3"
                                points="60,80 90,70 120,90 150,80 180,90 210,50 240,80 270,60 300,80 330,70"
                            />
                            
                            <!-- Points on line -->
                            <circle cx="60" cy="80" r="4" fill="#fff" stroke="#f5365c" stroke-width="2" />
