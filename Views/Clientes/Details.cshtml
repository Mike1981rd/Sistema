@model SistemaContable.Models.Cliente
@{
    #nullable disable
    ViewData["Title"] = "Detalle de Cliente";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Detalle de Cliente</h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm me-2">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <!-- Información principal -->
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Información General</h5>
                            <span class="badge @(Model.EsCliente && Model.EsProveedor ? "bg-success" : (Model.EsCliente ? "bg-primary" : "bg-info"))">
                                @Model.Tipo
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <dl class="row">
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreRazonSocial)</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreRazonSocial)</dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TipoIdentificacion)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.TipoIdentificacion != null)
                                            {
                                                @Html.DisplayFor(model => model.TipoIdentificacion.Nombre)
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definido</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NumeroIdentificacion)</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NumeroIdentificacion)</dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Municipio)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.Municipio != null)
                                            {
                                                @Html.DisplayFor(model => model.Municipio.Nombre)
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definido</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefono)</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Celular)</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Celular)</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Configuración de ventas -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Configuración de Ventas</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <dl class="row">
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TipoNcf)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.TipoNcf != null)
                                            {
                                                @Html.DisplayFor(model => model.TipoNcf.Nombre)
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definido</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PlazoPago)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.PlazoPago != null)
                                            {
                                                @Html.DisplayFor(model => model.PlazoPago.Nombre)
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definido</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ListaPrecio)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.ListaPrecio != null)
                                            {
                                                @Html.DisplayFor(model => model.ListaPrecio.Nombre)
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definido</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Vendedor)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.Vendedor != null)
                                            {
                                                @Html.DisplayFor(model => model.Vendedor.Nombre)
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definido</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LimiteCredito)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.LimiteCredito.HasValue)
                                            {
                                                @($"RD$ {Model.LimiteCredito.Value:N2}")
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definido</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Configuración contable -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Configuración Contable</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <dl class="row">
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CuentaPorCobrar)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.CuentaPorCobrar != null)
                                            {
                                                <span>@Model.CuentaPorCobrar.Codigo - @Model.CuentaPorCobrar.Nombre</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definida</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CuentaPorPagar)</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.CuentaPorPagar != null)
                                            {
                                                <span>@Model.CuentaPorPagar.Codigo - @Model.CuentaPorPagar.Nombre</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No definida</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <!-- Imagen -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Imagen</h5>
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                            {
                                <img src="@Model.ImagenUrl" alt="@Model.NombreRazonSocial" class="img-fluid rounded" style="max-height: 200px;" />
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-user-circle fa-5x text-muted"></i>
                                    <p class="mt-3 text-muted">No hay imagen disponible</p>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Fechas -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Información de Registro</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-6">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
                                <dd class="col-sm-6">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>
                                
                                @if (Model.FechaModificacion.HasValue)
                                {
                                    <dt class="col-sm-6">@Html.DisplayNameFor(model => model.FechaModificacion)</dt>
                                    <dd class="col-sm-6">@Model.FechaModificacion.Value.ToString("dd/MM/yyyy")</dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
            </div>
        </div>
    </div>
</div> 