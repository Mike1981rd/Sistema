@model SistemaContable.ViewModels.FamiliaViewModel
@{
    ViewData["Title"] = "Crear Familia";
}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="mt-4 mb-2" style="font-weight:normal">Nueva Familia</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item">Configuración</li>
                    <li class="breadcrumb-item"><a href="/Familia">Familias</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nueva Familia</li>
                </ol>
            </nav>
        </div>
    </div>

    @* Mostrar mensajes de error *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <h5>Se encontraron errores en el formulario:</h5>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>Error:</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Create" method="post" id="formFamilia">
        <input type="hidden" asp-for="EmpresaId" />
        <div class="card mb-4">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label">Nombre de la familia *</label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Estado" class="form-label">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Nota" class="form-label">Nota</label>
                    <textarea asp-for="Nota" class="form-control" rows="2" placeholder="Introducir texto aquí"></textarea>
                    <span asp-validation-for="Nota" class="text-danger"></span>
                </div>
                
                <!-- Cuentas Contables -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Cuentas Contables</h5>
                        <small class="text-muted">Selecciona las cuentas contables para cada categoría</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CuentaVentasId" class="form-label"></label>
                                <select asp-for="CuentaVentasId" class="form-select select-cuenta"
                                        asp-items="@Model.CuentasVentasDisponibles">
                                    <option value="">-- Seleccionar cuenta --</option>
                                </select>
                                <span asp-validation-for="CuentaVentasId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CuentaComprasInventariosId" class="form-label"></label>
                                <select asp-for="CuentaComprasInventariosId" class="form-select select-cuenta"
                                        asp-items="@Model.CuentasComprasInventariosDisponibles">
                                    <option value="">-- Seleccionar cuenta --</option>
                                </select>
                                <span asp-validation-for="CuentaComprasInventariosId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CuentaCostoVentasGastosId" class="form-label"></label>
                                <select asp-for="CuentaCostoVentasGastosId" class="form-select select-cuenta"
                                        asp-items="@Model.CuentasCostoVentasGastosDisponibles">
                                    <option value="">-- Seleccionar cuenta --</option>
                                </select>
                                <span asp-validation-for="CuentaCostoVentasGastosId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CuentaDescuentosId" class="form-label"></label>
                                <select asp-for="CuentaDescuentosId" class="form-select select-cuenta"
                                        asp-items="@Model.CuentasDescuentosDisponibles">
                                    <option value="">-- Seleccionar cuenta --</option>
                                </select>
                                <span asp-validation-for="CuentaDescuentosId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CuentaDevolucionesId" class="form-label"></label>
                                <select asp-for="CuentaDevolucionesId" class="form-select select-cuenta"
                                        asp-items="@Model.CuentasDevolucionesDisponibles">
                                    <option value="">-- Seleccionar cuenta --</option>
                                </select>
                                <span asp-validation-for="CuentaDevolucionesId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CuentaAjustesId" class="form-label"></label>
                                <select asp-for="CuentaAjustesId" class="form-select select-cuenta"
                                        asp-items="@Model.CuentasAjustesDisponibles">
                                    <option value="">-- Seleccionar cuenta --</option>
                                </select>
                                <span asp-validation-for="CuentaAjustesId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CuentaCostoMateriaPrimaId" class="form-label"></label>
                                <select asp-for="CuentaCostoMateriaPrimaId" class="form-select select-cuenta"
                                        asp-items="@Model.CuentasCostoMateriaPrimaDisponibles">
                                    <option value="">-- Seleccionar cuenta --</option>
                                </select>
                                <span asp-validation-for="CuentaCostoMateriaPrimaId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mb-4 text-end">
            <a href="/Familia" class="btn" style="background:#787276;color:#fff;">Cancelar</a>
            <button type="submit" id="btnSubmit" class="btn" style="background:#007848;color:#fff;">Guardar</button>
        </div>
    </form>
    <div id="errorLog" class="alert alert-danger mt-3" style="display:none;"></div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize Select2
            $('.select-cuenta').select2({
                theme: 'bootstrap-5',
                placeholder: 'Buscar cuenta contable...',
                allowClear: true,
                minimumInputLength: 1
            });

            // Verificar el valor del Estado al cargar la página
            console.log('Estado inicial:', $('#Estado').val());
            console.log('Estado es "true":', $('#Estado').val() === 'true');
            console.log('Estado es "false":', $('#Estado').val() === 'false');
            
            // Monitorear cambios en el Estado
            $('#Estado').on('change', function() {
                console.log('Estado cambiado a:', $(this).val());
            });

            // Form submission handling
            $('#formFamilia').on('submit', function(e) {
                // Capturar y mostrar los datos que se enviarán
                console.log('FORMULARIO ENVIADO - DATOS:');
                var formData = {};
                $(this).serializeArray().forEach(function(item) {
                    formData[item.name] = item.value;
                    console.log(`${item.name}: ${item.value}`);
                });
                
                // Verificación específica del campo Estado
                console.log('Estado antes de enviar:', $('#Estado').val());
                console.log('Estado seleccionado:', $('#Estado option:selected').text());
                
                // Disable submit button to prevent double submission
                $('#btnSubmit').prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Guardando...');
                
                // Permitir que el formulario se envíe normalmente
                return true;
            });
            
            // Display any validation errors
            if ($('.validation-summary-errors').length > 0 || $('.field-validation-error').length > 0) {
                $('#errorLog').text('Se detectaron errores de validación. Por favor, revise el formulario.').show();
            }
        });
    </script>
}
