@model List<SistemaContable.Models.CuentaContable>

@{
    ViewData["Title"] = "Catálogo de Cuentas";
}

<h2>Catálogo de Cuentas</h2>
<p>Contenido básico para confirmar que la ruta funciona.</p>

<div class="aurora-breadcrumb">
    <a href="/" class="aurora-breadcrumb-item">Inicio</a>
    <span class="aurora-breadcrumb-item">Catálogo de Cuentas</span>
</div>

<div class="aurora-dashboard-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="aurora-dashboard-title">@ViewData["Title"]</h2>
        <div>
            <a asp-controller="CatalogoCuentas" asp-action="SaldosIniciales" class="btn btn-aurora-secondary me-2">
                <i class="fas fa-balance-scale me-2"></i>Saldos Iniciales
            </a>
            <a asp-controller="CatalogoCuentas" asp-action="ImportarExcel" class="btn btn-aurora-secondary me-2">
                <i class="fas fa-file-import me-2"></i>Importar
            </a>
            <a asp-controller="CatalogoCuentas" asp-action="Create" class="btn btn-aurora-primary">
                <i class="fas fa-plus me-2"></i>Nueva Cuenta
            </a>
        </div>
    </div>

    <div class="aurora-card">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Naturaleza</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var cuenta in Model)
                        {
                            <tr>
                                <td>@cuenta.Codigo</td>
                                <td>@cuenta.Nombre</td>
                                <td>@cuenta.TipoCuenta</td>
                                <td>@cuenta.Naturaleza</td>
                                <td>
                                    @if (cuenta.Activo)
                                    {
                                        <span class="badge bg-success">Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactiva</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-controller="CatalogoCuentas" asp-action="Edit" asp-route-id="@cuenta.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="CatalogoCuentas" asp-action="Movimientos" asp-route-id="@cuenta.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-list"></i>
                                        </a>
                                        @if (!cuenta.TieneDependencias)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="confirmarEliminacion(@cuenta.Id, '@(cuenta.Codigo) - @(cuenta.Nombre)')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No hay cuentas contables registradas.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEliminacion(id, nombre) {
            if (confirm(`¿Está seguro que desea eliminar la cuenta ${nombre}?`)) {
                window.location.href = `/CatalogoCuentas/Delete/${id}`;
            }
        }
    </script>
} 