@using SistemaContable.Helpers
@model PaginatedList<SistemaContable.Models.Item>
@{
    ViewData["Title"] = "Items";
}

<style>
    .btn-outline-primary {
        border-color: #e3e6f0;
        color: #007bff;
    }
    .btn-outline-primary:hover {
        background-color: #f8f9fa;
        color: #0056b3;
        border-color: #dde0e6;
    }

    table.dataTable thead th {
        color: #495057 !important; /* Color gris oscuro estándar */
        font-weight: 500;
        border-bottom: 1px solid #e3e6f0;
    }
    
    /* Quita cualquier estilo que esté dando color azul a los th */
    table.dataTable thead th a {
        color: #495057 !important;
        text-decoration: none;
    }

    div.dataTables_length {
        float: left;
        margin-right: 20px;
        padding-top: 0.5em;
    }

    div.dataTables_length select {
        min-width: 60px;
        margin-left: 5px;
        margin-right: 5px;
    }
</style>

<div class="container-fluid p-0">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h4">Items</h1>
            <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                <ol class="breadcrumb pt-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">Inventario</li>
                    <li class="breadcrumb-item active">Items</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <ul class="nav border-0">
            <li class="nav-item">
                <a class="nav-link @(ViewBag.Tab == "Activos" || ViewBag.Tab == null ? "active" : "") border-0 position-relative" asp-action="Index" asp-route-tab="Activos">
                    Activos
                    @if (ViewBag.Tab == "Activos" || ViewBag.Tab == null)
                    {
                        <span class="position-absolute" style="bottom: 0; left: 0; right: 0; height: 2px; background-color: #007bff;"></span>
                    }
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.Tab == "Inactivos" ? "active" : "") border-0 position-relative" asp-action="Index" asp-route-tab="Inactivos">
                    Inactivos
                    @if (ViewBag.Tab == "Inactivos")
                    {
                        <span class="position-absolute" style="bottom: 0; left: 0; right: 0; height: 2px; background-color: #007bff;"></span>
                    }
                </a>
            </li>
        </ul>
    </div>
</div>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Items</h1>
            <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                <ol class="breadcrumb pt-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        Inventario
                    </li>
                    <li class="breadcrumb-item active">Items</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Nuevo Item
            </a>
        </div>
    </div>

    <!-- Resumen filtros activos -->
    <div class="mb-3 filtros-activos">
        @if (!string.IsNullOrEmpty((string)ViewData["CurrentFilter"]) ||
        ViewData["CurrentCategoriaId"] != null ||
        ViewData["CurrentProveedorId"] != null ||
        ViewData["CurrentAlmacenId"] != null ||
        ViewData["CurrentMarcaId"] != null)
        {
            <div class="alert alert-info d-flex justify-content-between">
                <div>
                    <strong><i class="fas fa-filter me-1"></i> Filtros activos:</strong>
                    @if (!string.IsNullOrEmpty((string)ViewData["CurrentFilter"]))
                    {
                        <span class="badge bg-primary ms-2">Búsqueda: @ViewData["CurrentFilter"]</span>
                    }
                    @if (ViewData["CurrentCategoriaId"] != null)
                    {
                        var categoriaId = (int)ViewData["CurrentCategoriaId"];
                        var categoria = ((SelectList)ViewData["Categorias"]).FirstOrDefault(c => c.Value == categoriaId.ToString());
                        <span class="badge bg-primary ms-2">Categoría: @(categoria?.Text ?? "Desconocida")</span>
                    }
                    @if (ViewData["CurrentProveedorId"] != null)
                    {
                        var proveedorId = (int)ViewData["CurrentProveedorId"];
                        var proveedor = ((SelectList)ViewData["Proveedores"]).FirstOrDefault(p => p.Value == proveedorId.ToString());
                        <span class="badge bg-primary ms-2">Proveedor: @(proveedor?.Text ?? "Desconocido")</span>
                    }
                    @if (ViewData["CurrentAlmacenId"] != null)
                    {
                        var almacenId = (int)ViewData["CurrentAlmacenId"];
                        var almacen = ((SelectList)ViewData["Almacenes"]).FirstOrDefault(a => a.Value == almacenId.ToString());
                        <span class="badge bg-primary ms-2">Almacén: @(almacen?.Text ?? "Desconocido")</span>
                    }
                    @if (ViewData["CurrentMarcaId"] != null)
                    {
                        var marcaId = (int)ViewData["CurrentMarcaId"];
                        var marca = ((SelectList)ViewData["Marcas"]).FirstOrDefault(m => m.Value == marcaId.ToString());
                        <span class="badge bg-primary ms-2">Marca: @(marca?.Text ?? "Desconocida")</span>
                    }
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-times me-1"></i> Limpiar filtros
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Filtros colapsables -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="mb-3">
                <button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="collapse"
                        data-bs-target="#filtrosCollapse" aria-expanded="false" aria-controls="filtrosCollapse">
                    <i class="fas fa-filter me-1"></i> Filtros avanzados
                </button>
            </div>
            <div class="collapse" id="filtrosCollapse">
                <form asp-action="Index" method="get" id="formFiltros">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="searchString" class="form-label">Buscar:</label>
                                <input type="text" id="searchString" name="searchString" class="form-control"
                                       placeholder="Nombre, código o código de barras"
                                       value="@ViewData["CurrentFilter"]" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="CategoriaId" class="form-label">Categoría <span class="text-danger">*</span></label>
                                <select id="CategoriaId" name="CategoriaId" class="form-select select2-basic" required></select>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="proveedorId" class="form-label">Proveedor:</label>
                                <select id="proveedorId" name="proveedorId" class="form-select select2-basic">
                                    <option value="">-- Todos los proveedores --</option>
                                    @foreach (var item in (SelectList)ViewData["Proveedores"])
                                    {
                                        if (ViewData["CurrentProveedorId"] != null &&
                                        ViewData["CurrentProveedorId"].ToString() == item.Value)
                                        {
                                            <option value="@item.Value" selected>@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="almacenId" class="form-label">Almacén:</label>
                                <select id="almacenId" name="almacenId" class="form-select select2-basic">
                                    <option value="">-- Todos los almacenes --</option>
                                    @foreach (var item in (SelectList)ViewData["Almacenes"])
                                    {
                                        if (ViewData["CurrentAlmacenId"] != null &&
                                        ViewData["CurrentAlmacenId"].ToString() == item.Value)
                                        {
                                            <option value="@item.Value" selected>@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="MarcaId" class="form-label">Marca</label>
                                <select id="MarcaId" name="MarcaId" class="form-select select2-basic"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i> Limpiar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-1"></i> Buscar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Tabla de datos -->
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-end mb-3">
                <div class="dropdown d-inline-block me-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-file-export me-1"></i> Exportar
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><button class="dropdown-item" id="export-excel"><i class="fas fa-file-excel me-2 text-success"></i>Excel</button></li>
                        <li><button class="dropdown-item" id="export-pdf"><i class="fas fa-file-pdf me-2 text-danger"></i>PDF</button></li>
                        <li><button class="dropdown-item" id="export-csv"><i class="fas fa-file-csv me-2 text-primary"></i>CSV</button></li>
                    </ul>
                </div>
            </div>
            <div class="table-responsive">
                <table id="itemsTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="width: 60px;">Imagen</th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-categoriaId="@ViewData["CurrentCategoriaId"]"
                                   asp-route-proveedorId="@ViewData["CurrentProveedorId"]"
                                   asp-route-almacenId="@ViewData["CurrentAlmacenId"]"
                                   asp-route-marcaId="@ViewData["CurrentMarcaId"]">
                                    Nombre
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["CodeSortParm"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-categoriaId="@ViewData["CurrentCategoriaId"]"
                                   asp-route-proveedorId="@ViewData["CurrentProveedorId"]"
                                   asp-route-almacenId="@ViewData["CurrentAlmacenId"]"
                                   asp-route-marcaId="@ViewData["CurrentMarcaId"]">
                                    Código
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["CategorySortParm"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-categoriaId="@ViewData["CurrentCategoriaId"]"
                                   asp-route-proveedorId="@ViewData["CurrentProveedorId"]"
                                   asp-route-almacenId="@ViewData["CurrentAlmacenId"]"
                                   asp-route-marcaId="@ViewData["CurrentMarcaId"]">
                                    Categoría
                                </a>
                            </th>
                            <th>Marca</th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["StockSortParm"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   asp-route-categoriaId="@ViewData["CurrentCategoriaId"]"
                                   asp-route-proveedorId="@ViewData["CurrentProveedorId"]"
                                   asp-route-almacenId="@ViewData["CurrentAlmacenId"]"
                                   asp-route-marcaId="@ViewData["CurrentMarcaId"]">
                                    Stock
                                </a>
                            </th>
                            <th>Estado</th>
                            <th style="width: 150px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                                    {
                                        <img src="@item.ImagenUrl" alt="@item.Nombre" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="text-center" style="width: 50px; height: 50px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-box fa-lg text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>@item.Nombre</td>
                                <td>@item.Codigo</td>
                                <td>@(item.Categoria?.Nombre ?? "-")</td>
                                <td>@(item.Marca?.Nombre ?? "Genérica")</td>
                                <td>
                                    <span class="@(item.StockActual <= item.NivelMinimo ? "text-danger" : "text-success")">
                                        @item.StockActual.ToString("N" + ViewBag.PrecisionDecimal) @(item.UnidadMedidaInventario?.Abreviatura ?? "")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(item.Estado ? "bg-success" : "bg-danger")">
                                        @(item.Estado ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-@(item.Estado ? "warning" : "success")" data-bs-toggle="modal"
                                                data-bs-target="#modalToggleEstado" data-id="@item.Id" data-estado="@item.Estado"
                                                data-nombre="@item.Nombre">
                                            <i class="fas fa-@(item.Estado ? "ban" : "check")"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"
                                                data-bs-target="#modalEliminar" data-id="@item.Id" data-nombre="@item.Nombre">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Count() == 0)
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> No se encontraron resultados para los filtros seleccionados.
                </div>
            }

            <!-- Paginación -->
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <nav aria-label="Paginación">
                <ul class="pagination justify-content-center">
                    <li class="page-item @prevDisabled">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-route-categoriaId="@ViewData["CurrentCategoriaId"]"
                           asp-route-proveedorId="@ViewData["CurrentProveedorId"]"
                           asp-route-almacenId="@ViewData["CurrentAlmacenId"]"
                           asp-route-marcaId="@ViewData["CurrentMarcaId"]"
                           class="page-link">
                            Anterior
                        </a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@i"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-categoriaId="@ViewData["CurrentCategoriaId"]"
                               asp-route-proveedorId="@ViewData["CurrentProveedorId"]"
                               asp-route-almacenId="@ViewData["CurrentAlmacenId"]"
                               asp-route-marcaId="@ViewData["CurrentMarcaId"]"
                               class="page-link">
                                @i
                            </a>
                        </li>
                    }
                    <li class="page-item @nextDisabled">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                           asp-route-categoriaId="@ViewData["CurrentCategoriaId"]"
                           asp-route-proveedorId="@ViewData["CurrentProveedorId"]"
                           asp-route-almacenId="@ViewData["CurrentAlmacenId"]"
                           asp-route-marcaId="@ViewData["CurrentMarcaId"]"
                           class="page-link">
                            Siguiente
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Modal para cambiar estado -->
<div class="modal fade" id="modalToggleEstado" tabindex="-1" aria-labelledby="modalToggleEstadoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalToggleEstadoLabel">Confirmar acción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="textoToggleEstado"></p>
            </div>
            <div class="modal-footer">
                <form id="formToggleEstado" asp-action="ToggleEstado" method="post">
                    <input type="hidden" id="itemIdToggle" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn" id="btnToggleEstado">Confirmar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal para eliminar -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalEliminarLabel">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de eliminar el item <strong id="nombreItem"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i> Esta acción no se puede deshacer.
                </div>
            </div>
            <div class="modal-footer">
                <form id="formEliminar" asp-action="Delete" method="post">
                    <input type="hidden" id="itemIdEliminar" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar select2
            $('.select2-basic').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });

            // Manejar submit del formulario de filtros
            $('#formFiltros').on('submit', function() {
                // Si algún campo select no tiene valor, establecer el valor como cadena vacía
                $('select', this).each(function() {
                    if (!$(this).val()) {
                        $(this).prop('disabled', true);
                    }
                });
                return true;
            });

            // Modal para cambiar estado
            $('#modalToggleEstado').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var estado = button.data('estado');
                var nombre = button.data('nombre');

                var modal = $(this);
                modal.find('#itemIdToggle').val(id);

                if (estado) {
                    modal.find('#textoToggleEstado').html('¿Está seguro de desactivar el item <strong>' + nombre + '</strong>?');
                    modal.find('#btnToggleEstado').removeClass('btn-success').addClass('btn-warning').text('Desactivar');
                } else {
                    modal.find('#textoToggleEstado').html('¿Está seguro de activar el item <strong>' + nombre + '</strong>?');
                    modal.find('#btnToggleEstado').removeClass('btn-warning').addClass('btn-success').text('Activar');
                }
            });

            // Modal para eliminar
            $('#modalEliminar').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var nombre = button.data('nombre');

                var modal = $(this);
                modal.find('#itemIdEliminar').val(id);
                modal.find('#nombreItem').text(nombre);
            });

            // Mostrar mensaje de éxito
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Éxito',
                            text: '@TempData["SuccessMessage"]',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000
                        });
            </text>
        }
        });
    </script>
    <script>
    // Evitar errores de funciones no definidas
    window.initImageUpload = function() { console.log('Placeholder para initImageUpload'); };
    </script>
}