    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializar TinyMCE para el campo de descripción
            if (document.getElementById('descripcionEditor')) {
                tinymce.init({
                    selector: '#descripcionEditor',
                    // Plugins básicos compatibles con TinyMCE 7
                    plugins: 'lists link image table code help wordcount fullscreen',
                    // Barra de herramientas simplificada
                    toolbar: 'undo redo | blocks | bold italic underline | forecolor backcolor | alignleft aligncenter alignright alignjustify | bullist numlist | link image | code',
                    menubar: false,
                    height: 300,
                    // Configuración de estilos de bloque
                    block_formats: 'Párrafo=p; Encabezado 1=h1; Encabezado 2=h2; Encabezado 3=h3; Encabezado 4=h4',
                    // Configuración básica
                    relative_urls: false,
                    // Sincronización con el textarea
                    setup: function (editor) {
                        editor.on('change', function () {
                            tinymce.triggerSave();
                        });
                    }
                });
            }

            // Funcionalidad de recetas
            initRecetasFunctionality();
        });

        // Función para inicializar la funcionalidad de recetas
        function initRecetasFunctionality() {
            // Event listeners para los botones
            document.getElementById('btnAddItem')?.addEventListener('click', function() {
                agregarItem();
            });

            document.getElementById('btnAddRecipe')?.addEventListener('click', function() {
                agregarReceta();
            });

            document.getElementById('btnExportRecipe')?.addEventListener('click', function() {
                exportarReceta();
            });

            // Event listener para el slider de margen
            const margenSlider = document.getElementById('margenSlider');
            const margenValue = document.getElementById('margenValue');
            
            if (margenSlider && margenValue) {
                margenSlider.addEventListener('input', function() {
                    margenValue.textContent = this.value + '%';
                    calcularCostos();
                });
            }

            // Event listeners para inputs de cantidad
            document.addEventListener('input', function(e) {
                if (e.target.matches('.receta-table input[type="number"]:not([readonly])')) {
                    actualizarSubtotal(e.target);
                }
            });

            // Event listeners para botones de eliminar
            document.addEventListener('click', function(e) {
                if (e.target.matches('.btn-remove, .btn-remove *')) {
                    eliminarIngrediente(e.target.closest('tr'));
                }
            });

            // Inicializar tabla vacía
            if (document.getElementById('recetasTableBody').children.length === 0) {
                mostrarTablaVacia();
            }
        }

        // Mostrar tabla vacía con mensaje
        function mostrarTablaVacia() {
            const tbody = document.getElementById('recetasTableBody');
            tbody.innerHTML = `
                <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                        <i class="fas fa-utensils fa-2x mb-2 text-muted"></i><br>
                        No hay ingredientes en la receta.<br>
                        <small>Haga clic en "Agregar Item" para comenzar a crear su receta.</small>
                    </td>
                </tr>
            `;
            
            // Limpiar totales
            document.getElementById('totalReceta').textContent = '$0.00';
            document.getElementById('costoTotalIngredientes').textContent = '$0.00';
            document.getElementById('precioVentaSugerido').textContent = '$0.00';
            
            // Actualizar el campo de costo a 0
            const costoInput = document.getElementById('costo');
            if (costoInput) {
                costoInput.value = '0.00';
                $(costoInput).trigger('change');
            }
        }

        // Variable para almacenar los items
        let itemsCache = [];

        // Función para agregar item
        function agregarItem() {
            // Primero verificar si ya existe la tabla vacía
            const tbody = document.getElementById('recetasTableBody');
            if (tbody.querySelector('td[colspan="7"]')) {
                tbody.innerHTML = '';
            }

            // Mostrar el popup personalizado
            document.getElementById('popupSeleccionarItem').style.display = 'flex';
            cargarItemsDisponibles();
        }
        
        // Función para cerrar el popup
        function cerrarPopupItems() {
            document.getElementById('popupSeleccionarItem').style.display = 'none';
        }
        
        // Función para limpiar filtros
        function limpiarFiltros() {
            document.getElementById('buscarItem').value = '';
            document.getElementById('filtroMarca').value = '';
            document.getElementById('filtroCategoria').value = '';
            document.getElementById('filtroSubcategoria').value = '';
            mostrarItemsEnModal(itemsCache);
        }

        // Cargar items disponibles desde la base de datos
        function cargarItemsDisponibles() {
            // Mostrar loading
            const tbody = document.getElementById('listaItems');
            tbody.innerHTML = '<tr><td colspan="7" class="text-center"><i class="fas fa-spinner fa-spin"></i> Cargando items...</td></tr>';
            
            // Llamar al API para obtener items
            fetch('/api/item/buscar?activos=true')
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.items) {
                        itemsCache = data.items;
                        mostrarItemsEnModal(data.items);
                        cargarFiltros(data.items);
                    } else {
                        tbody.innerHTML = '<tr><td colspan="7" class="text-center text-danger">Error al cargar items</td></tr>';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    tbody.innerHTML = '<tr><td colspan="7" class="text-center text-danger">Error al cargar items</td></tr>';
                });
        }
        
        // Cargar filtros con los datos únicos
        function cargarFiltros(items) {
            // Cargar marcas únicas
            const marcas = [...new Set(items.filter(i => i.marca).map(i => i.marca.nombre))].sort();
            const selectMarca = document.getElementById('filtroMarca');
            selectMarca.innerHTML = '<option value="">Elegir marca</option>';
            marcas.forEach(marca => {
                selectMarca.innerHTML += `<option value="${marca}">${marca}</option>`;
            });
            
            // Cargar categorías únicas
            const categorias = [...new Set(items.filter(i => i.categoria).map(i => i.categoria.nombre))].sort();
            const selectCategoria = document.getElementById('filtroCategoria');
            selectCategoria.innerHTML = '<option value="">Elegir la categoría</option>';
            categorias.forEach(cat => {
                selectCategoria.innerHTML += `<option value="${cat}">${cat}</option>`;
            });
        }

        // Mostrar items en el modal
        function mostrarItemsEnModal(items) {
            const tbody = document.getElementById('listaItems');
            
            if (items.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" class="text-center text-muted">No se encontraron items</td></tr>';
                return;
            }
            
            tbody.innerHTML = items.map(item => `
                <tr>
                    <td class="text-center">
                        <button type="button" class="btn-seleccionar-item" 
                                onclick="seleccionarItem(${item.id})" title="Seleccionar item">
                            <i class="fas fa-plus"></i>
                        </button>
                    </td>
                    <td>${item.nombre}</td>
                    <td>${item.marca?.nombre || 'Default'}</td>
                    <td>${item.categoria?.nombre || '-'}</td>
                    <td>-</td>
                    <td>Exento</td>
                    <td><span class="badge bg-success">Active</span></td>
                </tr>
            `).join('');
            
            // Actualizar información de paginación
            document.getElementById('showingInfo').textContent = `Showing 1 to ${items.length} of ${items.length} entries`;
        }

        // Función para seleccionar un item del modal
        function seleccionarItem(itemId) {
            const item = itemsCache.find(i => i.id === itemId);
            if (!item) return;
            
            const newRow = document.createElement('tr');
            newRow.setAttribute('data-item-id', item.id);
            
            // Crear opciones para contenedores
            let contenedoresOptions = '<option value="">Seleccione unidad...</option>';
            if (item.contenedores && item.contenedores.length > 0) {
                contenedoresOptions += item.contenedores.map(cont => 
                    `<option value="${cont.id}" data-costo="${cont.costoUnitario || 0}">${cont.unidadMedida?.nombre || cont.nombre}</option>`
                ).join('');
            }
            
            newRow.innerHTML = `
                <td data-id="${item.id}">${item.nombre}</td>
                <td>${item.marca?.nombre || '-'}</td>
                <td>
                    <input type="number" class="form-control form-control-sm cantidad-input" value="1" min="0" step="0.01">
                </td>
                <td>
                    <select class="form-select form-select-sm contenedor-select unidad-select" onchange="actualizarCostoContenedor(this)">
                        ${contenedoresOptions}
                    </select>
                </td>
                <td>
                    <input type="number" class="form-control form-control-sm costo-input" value="0.00" min="0" step="0.01" readonly>
                </td>
                <td class="subtotal-cell">$0.00</td>
                <td>
                    <button type="button" class="btn btn-remove" title="Eliminar">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            `;
            
            document.getElementById('recetasTableBody').appendChild(newRow);
            cerrarPopupItems();
            
            // Si hay solo un contenedor, seleccionarlo automáticamente
            if (item.contenedores && item.contenedores.length === 1) {
                const selectElement = newRow.querySelector('.contenedor-select');
                selectElement.value = item.contenedores[0].id;
                actualizarCostoContenedor(selectElement);
            }
        }

        // Función para actualizar el costo cuando se selecciona un contenedor
        function actualizarCostoContenedor(selectElement) {
            const selectedOption = selectElement.options[selectElement.selectedIndex];
            const costo = parseFloat(selectedOption.getAttribute('data-costo')) || 0;
            const row = selectElement.closest('tr');
            const costoInput = row.querySelector('.costo-input');
            
            costoInput.value = costo.toFixed(2);
            actualizarSubtotal(row.querySelector('.cantidad-input'));
        }

        // Aplicar filtros
        function aplicarFiltros() {
            const searchTerm = document.getElementById('buscarItem').value.toLowerCase();
            const marcaFilter = document.getElementById('filtroMarca').value;
            const categoriaFilter = document.getElementById('filtroCategoria').value;
            
            const itemsFiltrados = itemsCache.filter(item => {
                const matchSearch = !searchTerm || 
                    item.nombre.toLowerCase().includes(searchTerm) ||
                    (item.codigo && item.codigo.toLowerCase().includes(searchTerm));
                    
                const matchMarca = !marcaFilter || item.marca?.nombre === marcaFilter;
                const matchCategoria = !categoriaFilter || item.categoria?.nombre === categoriaFilter;
                
                return matchSearch && matchMarca && matchCategoria;
            });
            
            mostrarItemsEnModal(itemsFiltrados);
        }
        
        // Event listeners para filtros
        document.getElementById('buscarItem')?.addEventListener('input', aplicarFiltros);
        document.getElementById('filtroMarca')?.addEventListener('change', aplicarFiltros);
        document.getElementById('filtroCategoria')?.addEventListener('change', aplicarFiltros);
        document.getElementById('filtroSubcategoria')?.addEventListener('change', aplicarFiltros);
        
        // Cerrar popup al hacer clic fuera
        document.getElementById('popupSeleccionarItem').addEventListener('click', function(e) {
            if (e.target === this) {
                cerrarPopupItems();
            }
        });

        // Función para actualizar subtotal
        function actualizarSubtotal(input) {
            const row = input.closest('tr');
            const cantidadInput = row.querySelector('.cantidad-input');
            const costoInput = row.querySelector('.costo-input');
            const subtotalCell = row.querySelector('.subtotal-cell');
            
            if (cantidadInput && costoInput && subtotalCell) {
                const cantidad = parseFloat(cantidadInput.value) || 0;
                const costo = parseFloat(costoInput.value) || 0;
                const subtotal = cantidad * costo;
                
                subtotalCell.textContent = '$' + subtotal.toFixed(2);
                calcularTotales();
            }
        }

        // Función para calcular totales
        function calcularTotales() {
            const subtotalCells = document.querySelectorAll('.receta-table .subtotal-cell');
            let total = 0;
            
            subtotalCells.forEach(cell => {
                const valor = parseFloat(cell.textContent.replace('$', '')) || 0;
                total += valor;
            });
            
            document.getElementById('totalReceta').textContent = '$' + total.toFixed(2);
            document.getElementById('costoTotalIngredientes').textContent = '$' + total.toFixed(2);
            
            // Actualizar el campo de costo en la pestaña de precios
            const costoInput = document.getElementById('costo');
            if (costoInput) {
                costoInput.value = total.toFixed(2);
                // Disparar evento para que se actualicen otros cálculos
                $(costoInput).trigger('change');
            }
            
            calcularCostos();
            calcularMargenGanancia();
        }

        // Función para calcular costos y precio sugerido
        function calcularCostos() {
            const costoTotalIngredientes = parseFloat(document.getElementById('totalReceta').textContent.replace('$', '')) || 0;
            const margen = parseFloat(document.getElementById('margenSlider').value) || 0;
            const precioVenta = parseFloat(document.getElementById('precioVentaProducto').textContent.replace('$', '')) || 0;
            const costoUnitarioProducto = parseFloat(document.getElementById('costoUnitarioProducto').textContent.replace('$', '')) || 0;
            
            // Usar el mayor entre el costo de ingredientes y el costo unitario del producto
            const costoBase = Math.max(costoTotalIngredientes, costoUnitarioProducto);
            
            // Calcular precio sugerido basado en el costo base y margen
            const precioSugerido = costoBase * (1 + margen / 100);
            document.getElementById('precioVentaSugerido').textContent = '$' + precioSugerido.toFixed(2);
        }

        // Función para eliminar ingrediente
        function eliminarIngrediente(row) {
            Swal.fire({
                title: '¿Eliminar ingrediente?',
                text: 'Esta acción no se puede deshacer',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    row.remove();
                    calcularTotales();
                    
                    // Si no quedan filas, mostrar tabla vacía
                    if (document.getElementById('recetasTableBody').children.length === 0) {
                        mostrarTablaVacia();
                    }
                }
            });
        }

        // Función para importar receta
        function importarReceta() {
            Swal.fire({
                title: 'Importar Receta',
                text: 'Seleccione un archivo de receta (.json o .csv)',
                input: 'file',
                inputAttributes: {
                    'accept': '.json,.csv',
                    'aria-label': 'Subir archivo de receta'
                },
                showCancelButton: true,
                confirmButtonText: 'Importar',
                cancelButtonText: 'Cancelar'
            });
        }

        // Función para agregar receta
        function agregarReceta() {
            // Por ahora mostrar mensaje de funcionalidad en desarrollo
            Swal.fire({
                title: 'Agregar Receta',
                text: 'Esta funcionalidad permitirá agregar una receta existente como ingrediente',
                icon: 'info'
            });
        }

        // Función para exportar receta (ya no se usa pero la dejamos por si acaso)
        function exportarReceta() {
            const ingredientes = [];
            document.querySelectorAll('#recetasTableBody tr').forEach(row => {
                const ingrediente = row.querySelector('.ingrediente-select')?.selectedOptions[0]?.text || '';
                const cantidad = row.querySelector('.cantidad-input')?.value || '';
                const unidad = row.querySelector('.unidad-select')?.value || '';
                const costo = row.querySelector('.costo-input')?.value || '';
                
                if (ingrediente) {
                    ingredientes.push({
                        ingrediente,
                        cantidad,
                        unidad,
                        costo
                    });
                }
            });
            
            if (ingredientes.length === 0) {
                Swal.fire('Sin datos', 'No hay ingredientes para exportar', 'warning');
                return;
            }
            
            // Simular descarga
            Swal.fire({
                title: 'Receta exportada',
                text: 'La receta ha sido exportada exitosamente',
                icon: 'success'
            });
        }
        
        // Función para calcular el margen de ganancia
        function calcularMargenGanancia() {
            // Obtener el costo desde el campo readonly
            const costo = parseFloat($('#costo').val()) || 0;
            
            // Obtener el precio de venta de la primera fila de precios
            const precioTotal = parseFloat($('.precio-total').first().val()) || 0;
            
            if (costo > 0 && precioTotal > 0) {
                // Calcular margen: ((precio - costo) / costo) * 100
                const margen = ((precioTotal - costo) / costo) * 100;
                $('#margen').val(margen.toFixed(2));
            } else {
                $('#margen').val('0.00');
            }
        }
        
        // Agregar listeners para recalcular margen cuando cambien los precios
        $(document).on('input', '.precio-total', function() {
            calcularMargenGanancia();
        });
        
        // También recalcular cuando cambie el costo (aunque sea readonly, puede cambiar por la receta)
        $('#costo').on('change', function() {
            calcularMargenGanancia();
        });
    </script>
