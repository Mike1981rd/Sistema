@model int?
@{
    ViewData["Title"] = Model.HasValue ? "Editar Producto" : "Crear Nuevo Producto";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item">Punto de Venta</li>
                    <li class="breadcrumb-item"><a href="/Productos">Productos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title" id="tituloFormulario">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form id="formProducto">
                        <!-- Campo oculto para el ID del producto si estamos editando -->
                        <input type="hidden" id="productoId" name="Id" value="@Model" />

                        <!-- Pestañas (Bootstrap Navs) -->
                        <ul class="nav nav-tabs" id="productoTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="info-general-tab" data-bs-toggle="tab" data-bs-target="#info-general" type="button" role="tab" aria-controls="info-general" aria-selected="true">
                                    <i class="fas fa-info-circle"></i> Información General
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="precios-impuestos-tab" data-bs-toggle="tab" data-bs-target="#precios-impuestos" type="button" role="tab" aria-controls="precios-impuestos" aria-selected="false">
                                    <i class="fas fa-dollar-sign"></i> Precios e Impuestos
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="produccion-tab" data-bs-toggle="tab" data-bs-target="#produccion" type="button" role="tab" aria-controls="produccion" aria-selected="false">
                                    <i class="fas fa-print"></i> Impresión
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="inventario-tab" data-bs-toggle="tab" data-bs-target="#inventario" type="button" role="tab" aria-controls="inventario" aria-selected="false">
                                    <i class="fas fa-utensils"></i> Receta
                                </button>
                            </li>
                            @* Ocultar temporalmente la pestaña de variantes
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="variantes-tab" data-bs-toggle="tab" data-bs-target="#variantes" type="button" role="tab" aria-controls="variantes" aria-selected="false">
                                    <i class="fas fa-th-list"></i> Variantes
                                </button>
                            </li>
                            *@
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="modificadores-tab" data-bs-toggle="tab" data-bs-target="#modificadores" type="button" role="tab" aria-controls="modificadores" aria-selected="false">
                                    <i class="fas fa-sliders-h"></i> Modificadores
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="contabilidad-tab" data-bs-toggle="tab" data-bs-target="#contabilidad" type="button" role="tab" aria-controls="contabilidad" aria-selected="false">
                                    <i class="fas fa-calculator"></i> Contabilidad
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content" id="productoTabsContent">
                            <!-- Pestaña 1: Información General -->
                            <div class="tab-pane fade show active" id="info-general" role="tabpanel" aria-labelledby="info-general-tab">
                                <div class="container-fluid px-0 mt-3">
                                    <!-- Fila 1 de Campos -->
                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-6">
                                            <label for="plu" class="form-label">PLU (Código)</label>
                                            <input type="text" id="plu" name="PLU" class="form-control" 
                                                   placeholder="Se asignará automáticamente" readonly 
                                                   maxlength="50">
                                            <small class="form-text text-muted" style="min-height: 1.2em; display: block;">El código PLU se asignará automáticamente al guardar</small>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="nombre" class="form-label">Nombre del Producto <span class="text-danger">*</span></label>
                                            <input type="text" id="nombre" name="Nombre" class="form-control" 
                                                   required maxlength="100">
                                            <span class="invalid-feedback" style="min-height: 1.2em; display: block;">El nombre es requerido</span>
                                        </div>
                                    </div>

                                    <!-- Fila 2 de Campos -->
                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-6">
                                            <label for="nombreCortoTPV" class="form-label">Nombre Corto (TPV)</label>
                                            <input type="text" id="nombreCortoTPV" name="NombreCortoTPV" class="form-control"
                                                   maxlength="20">
                                            <span style="min-height: 1.2em; display: block;"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="categoriaId" class="form-label">Categoría <span class="text-danger">*</span></label>
                                            <select id="categoriaId" name="CategoriaId" class="form-select select2-categoria" required>
                                                <option value="">Seleccione una categoría</option>
                                            </select>
                                            <span class="invalid-feedback" style="min-height: 1.2em; display: block;">La categoría es requerida</span>
                                        </div>
                                        <!-- Campo de orden oculto -->
                                        <input type="hidden" id="ordenClasificacion" name="OrdenClasificacion" value="0">
                                    </div>

                                    <!-- Fila 3 de Campos -->
                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-6">
                                            <label for="colorBotonTPV_value" class="form-label">Color del Botón (TPV)</label>
                                            <div class="input-group">
                                                <input type="text" 
                                                       id="colorBotonTPV_value" 
                                                       name="ColorBotonTPV" 
                                                       class="form-control" 
                                                       placeholder="#RRGGBB" 
                                                       value="#d62828">
                                                <div id="colorPickerTrigger" class="input-group-text color-picker-trigger-button">
                                                    <!-- Este div mostrará el color y abrirá Pickr -->
                                                </div>
                                            </div>
                                            <span style="min-height: 1.2em; display: block;"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="descripcionEditor" class="form-label">Descripción</label>
                                            <textarea id="descripcionEditor" name="Descripcion" class="form-control" rows="10"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-12">
                                        <label class="form-label">Imagen del Producto</label>
                                        <div class="d-flex justify-content-center">
                                            <div id="imageUploaderCard" class="image-uploader-card" style="max-width: 500px; width: 100%;">
                                                <input type="file" id="imagenArchivo" name="ImagenArchivo" accept="image/*" style="display: none;" />
                                                <input type="hidden" id="imagenUrl" name="ImagenUrl" />
                                                <img id="imagenPreview" src="#" alt="Previsualización de imagen" style="display:none;" />
                                                <div id="uploadPlaceholder" class="upload-placeholder">
                                                    <i class="fas fa-cloud-upload-alt"></i>
                                                    <p>Haz clic o arrastra una imagen aquí</p>
                                                    <span>(Archivos JPG, PNG, GIF hasta 2MB)</span>
                                                </div>
                                                <button type="button" id="removeImageBtn" class="btn btn-sm btn-danger remove-image-btn" style="display:none;">
                                                    <i class="fas fa-times"></i> Quitar Imagen
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Sección de Opciones -->
                                <div class="options-section mt-4 pt-3 border-top">
                                    <h4 class="mb-3">Opciones</h4>
                                    
                                    <div class="options-container">
                                        <div class="option-toggle-group mb-3">
                                            <div class="form-check form-switch d-flex align-items-center">
                                                <input class="form-check-input me-3" type="checkbox" role="switch" 
                                                       id="esActivo" name="EsActivo" checked>
                                                <label class="form-check-label mb-0" for="esActivo">
                                                    Producto Activo
                                                </label>
                                            </div>
                                        </div>

                                        <div class="option-toggle-group mb-3">
                                            <div class="form-check form-switch d-flex align-items-center">
                                                <input class="form-check-input me-3" type="checkbox" role="switch" 
                                                       id="permiteModificadores" name="PermiteModificadores" checked>
                                                <label class="form-check-label mb-0" for="permiteModificadores">
                                                    Permite Modificadores
                                                </label>
                                            </div>
                                        </div>

                                        <div class="option-toggle-group mb-3">
                                            <div class="form-check form-switch d-flex align-items-center">
                                                <input class="form-check-input me-3" type="checkbox" role="switch" 
                                                       id="requierePuntoCoccion" name="RequierePuntoCoccion">
                                                <label class="form-check-label mb-0" for="requierePuntoCoccion">
                                                    Requiere Punto de Cocción
                                                </label>
                                            </div>
                                        </div>

                                        <div class="option-toggle-group mb-3">
                                            <div class="form-check form-switch d-flex align-items-center">
                                                <input class="form-check-input me-3" type="checkbox" role="switch" 
                                                       id="disponibleParaVenta" name="DisponibleParaVenta" checked>
                                                <label class="form-check-label mb-0" for="disponibleParaVenta">
                                                    Disponible para Venta
                                                </label>
                                            </div>
                                        </div>

                                        <div class="option-toggle-group mb-3">
                                            <div class="form-check form-switch d-flex align-items-center">
                                                <input class="form-check-input me-3" type="checkbox" role="switch" 
                                                       id="requierePreparacion" name="RequierePreparacion">
                                                <label class="form-check-label mb-0" for="requierePreparacion">
                                                    Requiere Preparación
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mt-3" id="divTiempoPreparacion" style="display:none;">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="tiempoPreparacion">Tiempo de Preparación (minutos)</label>
                                            <input type="number" class="form-control" id="tiempoPreparacion" name="TiempoPreparacion" min="0">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Pestaña 2: Precios e Impuestos -->
                            <div class="tab-pane fade" id="precios-impuestos" role="tabpanel" aria-labelledby="precios-impuestos-tab">
                                <div class="container-fluid px-0 mt-3">
                                    <div id="priceRowsContainer">
                                        <!-- Primera fila de precio (plantilla) -->
                                        <div class="row price-row gx-3 mb-3 align-items-center">
                                            <div class="col-md-3">
                                                <label class="form-label">Precio base</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">$</span>
                                                    <input type="number" class="form-control precio-base" data-original-name="PrecioBase" step="0.01" placeholder="0.00" value="0">
                                                </div>
                                            </div>
                                            <div class="col-auto d-flex align-items-end pb-1">
                                                <span class="h4 mx-2 text-muted">+</span>
                                            </div>
                                            <div class="col-md-4">
                                                <label class="form-label">Impuestos</label>
                                                <select class="form-select select2-impuestos" multiple="multiple" style="width: 100%;" 
                                                        name="Precios[0].ImpuestoIds" data-original-name="ImpuestoIds">
                                                    <!-- Las opciones se cargarán por AJAX -->
                                                </select>
                                                <span class="text-danger validation-message"></span>
                                            </div>
                                            <div class="col-auto d-flex align-items-end pb-1">
                                                <span class="h4 mx-2 text-muted">=</span>
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label">Precio Total</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">$</span>
                                                    <input type="number" class="form-control precio-total" data-original-name="PrecioTotal" step="0.01" placeholder="0.00" value="0">
                                                </div>
                                            </div>
                                            <div class="col-auto d-flex align-items-center">
                                                <button type="button" class="btn btn-sm btn-outline-danger btn-eliminar-precio" title="Eliminar este nivel de precio">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mt-4">
                                        <div class="col-12">
                                            <button type="button" id="btnAddPriceRow" class="btn btn-success">
                                                <i class="fas fa-plus me-1"></i> Añadir Nivel de Precio
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Sección adicional para costo y margen -->
                                    <div class="row mt-5 pt-4 border-top">
                                        <h5 class="mb-3">Información de Costo y Margen</h5>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="costo">Costo (Calculado de Receta)</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">$</span>
                                                    <input type="number" class="form-control" id="costo" name="Costo" step="0.01" min="0" readonly value="0">
                                                </div>
                                                <small class="form-text text-muted">Se calcula automáticamente desde la pestaña de recetas</small>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="margen">Margen de Ganancia</label>
                                                <div class="input-group">
                                                    <input type="number" class="form-control" id="margen" readonly>
                                                    <span class="input-group-text">%</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Pestaña 3: Producción -->
                            <div class="tab-pane fade" id="produccion" role="tabpanel" aria-labelledby="produccion-tab">
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="rutaImpresoraId">Ruta de Impresión</label>
                                            <select class="form-control select2" id="rutaImpresoraId" name="RutaImpresoraId">
                                                <option value="">Seleccione una ruta de impresión</option>
                                                @if (ViewBag.RutasImpresora != null)
                                                {
                                                    foreach (var ruta in ViewBag.RutasImpresora)
                                                    {
                                                        <option value="@ruta.Value">@ruta.Text</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Pestaña 4: Recetas -->
                            <div class="tab-pane fade" id="inventario" role="tabpanel" aria-labelledby="inventario-tab">
                                <div class="container-fluid px-0 mt-3">
                                    <!-- Botones de acción superiores -->
                                    <div class="d-flex gap-2 mb-4">
                                        <button type="button" class="btn btn-receta-styled" id="btnAddItem">
                                            <i class="fas fa-plus"></i>
                                            <span>Agregar Item</span>
                                        </button>
                                        <button type="button" class="btn btn-receta-styled" id="btnAddRecipe">
                                            <i class="fas fa-plus"></i>
                                            <span>Agregar Receta</span>
                                        </button>
                                        <button type="button" class="btn btn-receta-styled" id="btnExportRecipe">
                                            <i class="fas fa-file-export"></i>
                                            <span>Exportar Receta</span>
                                        </button>
                                    </div>

                                    <!-- Tabla de ingredientes -->
                                    <div class="receta-table-container">
                                        <table class="table receta-table">
                                            <thead>
                                                <tr>
                                                    <th style="width: 30%">Nombre</th>
                                                    <th style="width: 15%">Marca</th>
                                                    <th style="width: 12%">Cantidad</th>
                                                    <th style="width: 15%">Unidad</th>
                                                    <th style="width: 12%">Costo</th>
                                                    <th style="width: 12%">Subtotal</th>
                                                    <th style="width: 50px"></th>
                                                </tr>
                                            </thead>
                                            <tbody id="recetasTableBody">
                                                <!-- Las filas se agregarán dinámicamente -->
                                            </tbody>
                                            <tfoot>
                                                <tr class="table-footer-row">
                                                    <td colspan="4" class="text-end fw-bold">Total:</td>
                                                    <td class="fw-bold" id="totalReceta">$0.00</td>
                                                    <td></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>

                                    <!-- Panel de información de costos -->
                                    <div class="row mt-4">
                                        <div class="col-md-6">
                                            <div class="cost-info-panel">
                                                <h5 class="panel-title">Información de Costos</h5>
                                                
                                                <div class="cost-info-row">
                                                    <span>Costo Total de Ingredientes:</span>
                                                    <span id="costoTotalIngredientes">$0.00</span>
                                                </div>
                                                
                                                <div class="cost-info-row">
                                                    <span>Precio Venta Producto:</span>
                                                    <span id="precioVentaProducto">$0.00</span>
                                                </div>
                                                
                                                <div class="cost-info-row">
                                                    <span>Costo Unitario:</span>
                                                    <span id="costoUnitarioProducto">$0.00</span>
                                                </div>
                                                
                                                <div class="cost-info-row">
                                                    <span>Cantidad Base:</span>
                                                    <span id="cantidadBaseProducto">1.00</span>
                                                </div>
                                                
                                                <div class="cost-info-row">
                                                    <span>Costo Total Producto:</span>
                                                    <span id="costoTotalProducto">$0.00</span>
                                                </div>
                                                
                                                <div class="cost-info-row highlighted">
                                                    <span>Precio de Venta Sugerido:</span>
                                                    <span id="precioVentaSugerido">$0.00</span>
                                                </div>
                                                
                                            </div>
                                            
                                            <!-- Slider de margen -->
                                            <div class="margin-slider-container mt-4 p-3">
                                                <label class="form-label mb-3">Margen de Ganancia</label>
                                                <div class="slider-wrapper">
                                                    <div class="slider-labels d-flex justify-content-between mb-2">
                                                        <span class="text-muted">0%</span>
                                                        <span class="text-muted">100%</span>
                                                    </div>
                                                    <input type="range" class="form-range custom-range" id="margenSlider" 
                                                           min="0" max="100" value="50" step="1">
                                                    <div class="text-center mt-3">
                                                        <span class="badge bg-primary fs-6" id="margenValue">50%</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <div class="recipe-notes">
                                                <h5 class="panel-title">Notas de la Receta</h5>
                                                <textarea class="form-control" id="notasReceta" rows="4" placeholder="Agregar notas o instrucciones especiales..."></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @* Ocultar temporalmente el contenido de variantes
                            <!-- Pestaña 5: Variantes -->
                            <div class="tab-pane fade" id="variantes" role="tabpanel" aria-labelledby="variantes-tab">
                                <div class="mt-3">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5>Variantes del Producto</h5>
                                        <button type="button" class="btn btn-primary btn-sm" id="btnAgregarVariante">
                                            <i class="fas fa-plus"></i> Agregar Variante
                                        </button>
                                    </div>
                                    <div id="listaVariantes">
                                        <p class="text-muted">No hay variantes definidas</p>
                                    </div>
                                </div>
                            </div>
                            *@

                            <!-- Pestaña 6: Modificadores -->
                            <div class="tab-pane fade" id="modificadores" role="tabpanel" aria-labelledby="modificadores-tab">
                                <div class="mt-3">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5>Grupos de Modificadores</h5>
                                        <button type="button" class="btn btn-primary btn-sm" id="btnAsignarGrupo">
                                            <i class="fas fa-plus"></i> Asignar Grupo
                                        </button>
                                    </div>
                                    <div id="listaGruposModificadores">
                                        <p class="text-muted">No hay grupos de modificadores asignados</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Pestaña 7: Contabilidad -->
                            <div class="tab-pane fade" id="contabilidad" role="tabpanel" aria-labelledby="contabilidad-tab">
                                <div class="alert alert-info mt-3">
                                    <i class="fas fa-info-circle me-2"></i> Las cuentas contables se heredan de la categoría seleccionada. Puede personalizarlas para este producto específico.
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="cuentaVentasId" class="form-label">Cuenta de Ventas</label>
                                        <select id="cuentaVentasId" name="CuentaVentasId" class="form-select select2-cuenta-contable">
                                            <option value="">Seleccione una cuenta</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="cuentaComprasInventariosId" class="form-label">Cuenta de Compras/Inventarios</label>
                                        <select id="cuentaComprasInventariosId" name="CuentaComprasInventariosId" class="form-select select2-cuenta-contable">
                                            <option value="">Seleccione una cuenta</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="cuentaCostoVentasGastosId" class="form-label">Cuenta de Costo de Ventas</label>
                                        <select id="cuentaCostoVentasGastosId" name="CuentaCostoVentasGastosId" class="form-select select2-cuenta-contable">
                                            <option value="">Seleccione una cuenta</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="cuentaDescuentosId" class="form-label">Cuenta de Descuentos</label>
                                        <select id="cuentaDescuentosId" name="CuentaDescuentosId" class="form-select select2-cuenta-contable">
                                            <option value="">Seleccione una cuenta</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="cuentaDevolucionesId" class="form-label">Cuenta de Devoluciones</label>
                                        <select id="cuentaDevolucionesId" name="CuentaDevolucionesId" class="form-select select2-cuenta-contable">
                                            <option value="">Seleccione una cuenta</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="cuentaAjustesId" class="form-label">Cuenta de Ajustes</label>
                                        <select id="cuentaAjustesId" name="CuentaAjustesId" class="form-select select2-cuenta-contable">
                                            <option value="">Seleccione una cuenta</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="cuentaCostoMateriaPrimaId" class="form-label">Cuenta de Costo de Materia Prima</label>
