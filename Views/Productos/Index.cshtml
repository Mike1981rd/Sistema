@model IEnumerable<SistemaContable.Models.ProductoVenta>

@{
    ViewData["Title"] = "Productos";
}

@section Styles {
    <style>
        /* ESTILOS FORZADOS - NO MODIFICAR */
        /* Botón rectangular */
        .btn-primary.btn-sm {
            background-color: #0A1172 !important;
            border-color: #0A1172 !important;
            border-radius: 4px !important;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15) !important;
        }

        /* SOLUCIÓN RÁPIDA Y AGRESIVA PARA ICONOS */
        .btn-group.no-gap {
            display: inline-block !important;
            font-size: 0 !important;
            line-height: 0 !important;
            letter-spacing: -1px !important;
        }

        .btn-group.no-gap .btn {
            display: inline-block !important;
            padding: 4px 6px !important;
            margin: 0 !important;
            border: none !important;
            background: none !important;
            font-size: 14px !important;
            line-height: 1 !important;
            vertical-align: top !important;
        }

        .btn-group.no-gap .btn + .btn {
            margin-left: -5px !important;
        }
        
        /* FUERZA BRUTA: Eliminar TODOS los espacios */
        .btn-group.no-gap * {
            margin: 0 !important;
            padding: 2px 4px !important;
            border: 0 !important;
        }

        .btn-group .btn:hover {
            transform: scale(1.2);
        }

        /* Colores específicos de hover */
        .btn-group .text-primary:hover {
            color: #0062ff !important;
        }

        .btn-group .text-info:hover {
            color: #17a2b8 !important;
        }

        .btn-group .text-danger:hover {
            color: #dc3545 !important;
        }

        .btn-group .text-success:hover {
            color: #218838 !important;
        }

        /* Eliminar completamente el botón del medio del flujo */
        .view-details {
            display: none !important;
            width: 0 !important;
            height: 0 !important;
            padding: 0 !important;
            margin: 0 !important;
            border: 0 !important;
            position: absolute !important;
            overflow: hidden !important;
            clip: rect(0 0 0 0) !important;
        }

        /* Estilo para el botón de exportar */
        .dropdown-toggle::after {
            display: inline-block;
            margin-left: 0.5em;
            vertical-align: 0.15em;
            content: "";
            border-top: 0.3em solid;
            border-right: 0.3em solid transparent;
            border-bottom: 0;
            border-left: 0.3em solid transparent;
        }

        .btn-outline-secondary {
            border-color: #e3e6f0;
            color: #6c757d;
        }

        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
            color: #444;
            border-color: #dde0e6;
        }

        /* Corregir visualización de "Mostrar X registros" */
        .dataTables_length {
            width: 100%;
            margin-bottom: 15px;
            padding-left: 0;
        }

        .dataTables_length select {
            min-width: 60px;
        }

        /* Asegurar que el contenedor tenga suficiente espacio */
        div.dataTables_wrapper div.dataTables_length {
            float: left;
            padding-top: 0.5em;
        }

        /* Corregir problema visual al colapsar panel lateral */
        .aurora-wrapper.sidebar-collapsed .aurora-sidebar {
            transition: width 0.3s ease;
            overflow: hidden;
        }

        .aurora-wrapper.sidebar-collapsed .aurora-content {
            transition: margin-left 0.3s ease;
        }

        .aurora-main {
            background-color: #f5f7fa;
            min-height: calc(100vh - 60px);
            padding: 20px;
        }

        /* Estilos para las pestañas */
        .nav-link.active {
            border-bottom: 2px solid #007bff !important;
            font-weight: 500;
        }

        .nav-link {
            padding-bottom: 10px;
            margin-bottom: -1px;
        }
    </style>
}

<div class="container-fluid p-0">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h4">Productos</h1>
            <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                <ol class="breadcrumb pt-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">Punto de Venta</li>
                    <li class="breadcrumb-item active">Productos</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <ul class="nav border-0">
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Tab == "Activos" || ViewBag.Tab == null ? "active" : "") border-0 position-relative" asp-action="Index" asp-route-tab="Activos">
                        Activos
                        @if (ViewBag.Tab == "Activos" || ViewBag.Tab == null)
                        {
                            <span class="position-absolute" style="bottom: 0; left: 0; right: 0; height: 2px; background-color: #007bff;"></span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Tab == "Inactivos" ? "active" : "") border-0 position-relative" asp-action="Index" asp-route-tab="Inactivos">
                        Inactivos
                        @if (ViewBag.Tab == "Inactivos")
                        {
                            <span class="position-absolute" style="bottom: 0; left: 0; right: 0; height: 2px; background-color: #007bff;"></span>
                        }
                    </a>
                </li>
            </ul>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filtros adicionales para productos -->
    <div class="row mb-3">
        <div class="col-md-3">
            <select class="form-control" id="filtroCategoria">
                <option value="">Todas las categorías</option>
            </select>
        </div>
        <div class="col-md-9 text-end">
            <div class="dropdown d-inline-block me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-file-export me-1"></i> Exportar
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><button class="dropdown-item" id="export-excel"><i class="fas fa-file-excel me-2 text-success"></i>Excel</button></li>
                    <li><button class="dropdown-item" id="export-pdf"><i class="fas fa-file-pdf me-2 text-danger"></i>PDF</button></li>
                    <li><button class="dropdown-item" id="export-csv"><i class="fas fa-file-csv me-2 text-primary"></i>CSV</button></li>
                </ul>
            </div>
            <a asp-action="Create" class="btn btn-primary btn-sm px-3">
                <i class="fas fa-plus me-1"></i> Nuevo producto
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="productosTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>PLU</th>
                            <th>Categoría</th>
                            <th>Precio</th>
                            <th>Costo</th>
                            <th>Margen</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Where(p => ViewBag.Tab == "Inactivos" ? !p.EsActivo : p.EsActivo))
                        {
                            <tr>
                                <td>
                                    @item.Nombre
                                    @if (!string.IsNullOrEmpty(item.NombreCortoTPV))
                                    {
                                        <small class="text-muted d-block">@item.NombreCortoTPV</small>
                                    }
                                </td>
                                <td>@(item.PLU ?? "-")</td>
                                <td>@item.Categoria?.Nombre</td>
                                <td class="text-end">$@item.PrecioVenta.ToString("N2")</td>
                                <td class="text-end">$@item.Costo.ToString("N2")</td>
                                <td class="text-end">
                                    @{
                                        var margen = item.Costo > 0 ? ((item.PrecioVenta - item.Costo) / item.Costo) * 100 : 0;
                                    }
                                    @margen.ToString("N2")%
                                </td>
                                <td class="text-center">
                                    <div class="btn-group no-gap">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm text-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm text-info view-details d-none" data-id="@item.Id" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        @if (item.EsActivo)
                                        {
                                            <button class="btn btn-sm text-danger" onclick="toggleEstado(@item.Id, '@item.Nombre', true)" title="Desactivar">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm text-success" onclick="toggleEstado(@item.Id, '@item.Nombre', false)" title="Activar">
                                                <i class="fas fa-check-circle"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Form oculto para toggle estado -->
<form id="toggleForm" action="/productos/toggle-estado" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="toggleId" />
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar DataTable
            var tabla = $('#productosTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                buttons: [
                    {
                        extend: 'excel',
                        text: '<i class="fas fa-file-excel me-2 text-success"></i>Excel',
                        className: 'btn btn-sm btn-outline-secondary me-2',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="fas fa-file-pdf me-2 text-danger"></i>PDF',
                        className: 'btn btn-sm btn-outline-secondary me-2',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    },
                    {
                        extend: 'csv',
                        text: '<i class="fas fa-file-csv me-2 text-primary"></i>CSV',
                        className: 'btn btn-sm btn-outline-secondary',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    }
                ]
            });

            // Cargar categorías para el filtro
            $.get('/api/categorias', function(categorias) {
                const select = $('#filtroCategoria');
                categorias.forEach(cat => {
                    select.append(new Option(cat.nombre, cat.id));
                });
            });

            // Filtro por categoría
            $('#filtroCategoria').on('change', function() {
                var categoria = $(this).find('option:selected').text();
                if (categoria === 'Todas las categorías') {
                    tabla.column(2).search('').draw();
                } else {
                    tabla.column(2).search(categoria).draw();
                }
            });

            // Conectar los botones del dropdown con los botones de DataTables
            $('#export-excel').on('click', function() {
                $('#productosTable').DataTable().button(0).trigger();
            });

            $('#export-pdf').on('click', function() {
                $('#productosTable').DataTable().button(1).trigger();
            });

            $('#export-csv').on('click', function() {
                $('#productosTable').DataTable().button(2).trigger();
            });
        });

        // Función ultra simple para toggle estado
        function toggleEstado(id, nombre, activo) {
            const accion = activo ? 'desactivar' : 'activar';
            
            if (confirm(`¿Está seguro que desea ${accion} el producto ${nombre}?`)) {
                const form = document.getElementById('toggleForm');
                form.action = `/productos/toggle-estado/${id}`;
                document.getElementById('toggleId').value = id;
                form.submit();
            }
        }
    </script>
}