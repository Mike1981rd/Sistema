@model SistemaContable.Models.Impuesto
@using SistemaContable.Models.Enums

@{
    ViewData["Title"] = "Detalles de Impuesto";
}

<div class="aurora-card mb-4">
    <div class="aurora-card-header d-flex justify-content-between align-items-center">
        <h1 class="h4 mb-0">Detalles del Impuesto</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                <i class="fas fa-edit me-1"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Volver
            </a>
        </div>
    </div>
    <div class="aurora-card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <h6 class="fw-bold">Nombre:</h6>
                    <p>@Model.Nombre</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Tipo:</h6>
                    <p>@Model.Tipo.ToString().Replace("_", " ")</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Porcentaje:</h6>
                    <p>@(Model.Porcentaje.HasValue ? $"{Model.Porcentaje.Value:N2}%" : "N/A")</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Es Acreditable:</h6>
                    <p>
                        @if(Model.EsAcreditable) {
                            <span class="badge bg-success">Sí</span>
                        } else {
                            <span class="badge bg-secondary">No</span>
                        }
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <h6 class="fw-bold">Estado:</h6>
                    <p>
                        @if(Model.EstaEnUso) {
                            <span class="badge bg-info">En uso</span>
                        } else {
                            <span class="badge bg-light text-dark">Disponible</span>
                        }
                    </p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Descripción:</h6>
                    <p>@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Cuenta Contable para Ventas:</h6>
                    <p>@(Model.CuentaContableVentas != null ? $"{Model.CuentaContableVentas.Codigo} - {Model.CuentaContableVentas.Nombre}" : "No asignada")</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Cuenta Contable para Compras:</h6>
                    <p>@(Model.CuentaContableCompras != null ? $"{Model.CuentaContableCompras.Codigo} - {Model.CuentaContableCompras.Nombre}" : "No asignada")</p>
                </div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <h6 class="fw-bold">Fecha de Creación:</h6>
                    <p>@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <h6 class="fw-bold">Última Modificación:</h6>
                    <p>@(Model.FechaModificacion.HasValue ? Model.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm") : "Sin modificaciones")</p>
                </div>
            </div>
        </div>
    </div>
</div> 