@model SistemaContable.ViewModels.RutaImpresoraViewModel

@{
    ViewData["Title"] = "Editar Ruta de Impresora";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/PuntoVenta">Punto de Venta</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Rutas de Impresora</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar Ruta</li>
        </ol>
    </nav>

    <!-- Card principal -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Editar Ruta de Impresora</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EmpresaId" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Default" class="form-check-input" />
                                <label asp-for="Default" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Estado" class="form-check-input" />
                                <label asp-for="Estado" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary" style="background-color: #007848 !important; border-color: #007848 !important;">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 