@model SistemaContable.Models.ComprobanteFiscal

@{
    ViewData["Title"] = "Crear Comprobante Fiscal";
}

<div class="container-fluid p-0">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h4">Crear Comprobante Fiscal</h1>
            <nav class="breadcrumb-container d-none d-sm-block d-lg-inline-block" aria-label="breadcrumb">
                <ol class="breadcrumb pt-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Comprobantes" asp-action="Index">Comprobantes Fiscales</a>
                    </li>
                    <li class="breadcrumb-item active">Crear Nuevo</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label required"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TipoDocumento" class="form-label required"></label>
                            <select asp-for="TipoDocumento" class="form-select">
                                <option value="">Seleccione un tipo de documento</option>
                                @foreach (var tipo in ViewBag.TiposDocumento)
                                {
                                    <option value="@tipo">@tipo</option>
                                }
                            </select>
                            <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label required"></label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="">Seleccione un tipo</option>
                                @foreach (var tipo in ViewBag.TiposComprobante)
                                {
                                    <option value="@tipo">@tipo</option>
                                }
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Sucursal" class="form-label required"></label>
                            <input asp-for="Sucursal" class="form-control" />
                            <span asp-validation-for="Sucursal" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="Prefijo" class="form-label required"></label>
                            <input asp-for="Prefijo" class="form-control" maxlength="10" />
                            <span asp-validation-for="Prefijo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="NumeroInicial" class="form-label required"></label>
                            <input asp-for="NumeroInicial" class="form-control" type="number" min="1" />
                            <span asp-validation-for="NumeroInicial" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="NumeroFinal" class="form-label"></label>
                            <input asp-for="NumeroFinal" class="form-control" type="number" min="0" />
                            <span asp-validation-for="NumeroFinal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="FechaVencimiento" class="form-label required"></label>
                            <input asp-for="FechaVencimiento" class="form-control" type="date" />
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 form-check">
                            <input asp-for="Preferida" class="form-check-input" />
                            <label asp-for="Preferida" class="form-check-label"></label>
                            <small class="form-text text-muted d-block">Si marca esta opci칩n, se usar치 por defecto para este tipo de documento</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 form-check">
                            <input asp-for="Electronica" class="form-check-input" />
                            <label asp-for="Electronica" class="form-check-label"></label>
                            <small class="form-text text-muted d-block">Marque esta opci칩n si es un comprobante electr칩nico</small>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 