@model IEnumerable<SistemaContable.Models.Banco>

@{
    ViewData["Title"] = "Cuentas Bancarias";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-gray-800"><i class="fas fa-university me-2" style="color: #848482;"></i>Cuentas Bancarias</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill shadow-sm px-4">
            <i class="fas fa-plus me-2"></i> Nueva Cuenta
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs text-primary text-uppercase mb-1">
                                Total Cuentas</div>
                            <div class="h5 mb-0 text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-university fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs text-success text-uppercase mb-1">
                                Saldo Total</div>
                            <div class="h5 mb-0 text-gray-800">@Model.Sum(b => b.SaldoActual).ToString("N2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs text-info text-uppercase mb-1">
                                Cuentas Activas</div>
                            <div class="h5 mb-0 text-gray-800">@Model.Count(b => b.Activo)</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs text-warning text-uppercase mb-1">
                                Pendiente Conciliar</div>
                            <div class="h5 mb-0 text-gray-800">@Model.Sum(b => b.SaldoPendienteReconciliacion).ToString("N2")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-balance-scale fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Accounts Table Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-white d-flex justify-content-between align-items-center">
            <h6 class="m-0 text-primary">Listado de Cuentas Bancarias</h6>
            <div class="input-group" style="max-width: 300px;">
                <span class="input-group-text bg-white border-right-0">
                    <i class="fas fa-search text-gray-400"></i>
                </span>
                <input type="text" id="searchInput" class="form-control border-left-0 rounded-right" 
                       placeholder="Buscar cuenta...">
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped border-bottom" id="bancoTable">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th scope="col"><i class="fas fa-university me-1" style="color: #848482;"></i> Cuenta</th>
                            <th scope="col"><i class="fas fa-building me-1" style="color: #848482;"></i> Entidad</th>
                            <th scope="col"><i class="fas fa-tag me-1" style="color: #848482;"></i> Tipo</th>
                            <th scope="col"><i class="fas fa-hashtag me-1" style="color: #848482;"></i> Número</th>
                            <th scope="col"><i class="fas fa-coins me-1" style="color: #848482;"></i> Moneda</th>
                            <th scope="col" class="text-end"><i class="fas fa-money-bill-wave me-1" style="color: #848482;"></i> Saldo Actual</th>
                            <th scope="col" class="text-end"><i class="fas fa-balance-scale me-1" style="color: #848482;"></i> Pdte. Conciliar</th>
                            <th scope="col" class="text-center"><i class="fas fa-toggle-on me-1" style="color: #848482;"></i> Estado</th>
                            <th scope="col" class="text-center"><i class="fas fa-cogs me-1" style="color: #848482;"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Activo ? "" : "table-secondary")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary me-2 text-white">
                                            @(item.Nombre[0].ToString().ToUpper())
                                        </div>
                                        @item.Nombre
                                    </div>
                                </td>
                                <td>@item.EntidadBancaria</td>
                                <td>
                                    <span class="badge rounded-pill 
                                        @(item.TipoCuenta == TipoCuentaBancaria.Corriente ? "bg-info" : 
                                          item.TipoCuenta == TipoCuentaBancaria.Ahorro ? "bg-success" : 
                                          item.TipoCuenta == TipoCuentaBancaria.Inversion ? "bg-warning" : 
                                          item.TipoCuenta == TipoCuentaBancaria.Credito ? "bg-danger" : "bg-secondary")">
                                        @item.TipoCuenta.ToString()
                                    </span>
                                </td>
                                <td>@item.NumeroCuenta</td>
                                <td>
                                    <span class="badge bg-light text-dark border">@item.Moneda</span>
                                </td>
                                <td class="text-end">
                                    <span class="@(item.SaldoActual < 0 ? "text-danger" : "text-success")">
                                        @item.SaldoActual.ToString("N2")
                                    </span>
                                </td>
                                <td class="text-end">
                                    <span class="@(item.SaldoPendienteReconciliacion < 0 ? "text-danger" : "text-success")">
                                        @item.SaldoPendienteReconciliacion.ToString("N2")
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success rounded-pill">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Transacciones" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-primary rounded-start" title="Ver transacciones">
                                            <i class="fas fa-receipt"></i>
                                        </a>
                                        <a asp-action="NuevaTransaccion" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-success" title="Registrar transacción">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-secondary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-info" title="Detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-danger rounded-end" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Filtro de búsqueda en la tabla
            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#bancoTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}

<style>
    .avatar-circle {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }
    
    .card.border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    
    .card.border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    
    .card.border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    
    .card.border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.05);
        cursor: pointer;
    }
</style> 